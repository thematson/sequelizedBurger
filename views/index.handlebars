<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-half has-text-centered">
                <div class="column is-4" style="display: inline-block">
                    <figure class="image is-128x128">
                        <img src="/assets/img/peach.png">
                    </figure>
                </div>                
                <h1 class="title">Eat Da Peach!</h1>
                <p class="subtitle">Because it's always peach-eating season</p>
                    <div class="columns">
                        <div class="column is-three-quarters has-text-left" id="not-devoured">

                            <h2>Peaches that are NOT devoured!</h2>
                                <ul>
                                    {{#each burgers}} 
                                    {{#unless devoured}}
                                    <li>
                                        <p class="label">{{this.id}}. {{this.burger_name}} 
                                            <button class="eatbutt" data-id="{{this.id}}" data-devoured="{{devoured}}">Eat Dat Peach</button>{{!--
                                            <a href="/{{this.id}}">Update this quote</a> --}}
                                    </li>
                                    {{/unless}} 
                                    {{/each}}
                                </ul>
                           
                        </div>
                        <div class="column is-three-quarters has-text-left" class="devoured">
                            <h2>Peaches that are devoured!</h2>
                                <ul>
                                    {{#each burgers}} 
                                    {{#if devoured}}
                                    <li>

                                        <p class="label">{{this.id}}. {{this.burger_name}}
                                            
                                        </p>

                                        {{!--
                                        <a href="/{{this.id}}">Update this quote</a> --}}
                                    </li>
                                    {{/if}} 
                                    {{/each}}
                                </ul>
                           
                        </div>
                </div>
                <h2>Add a Peach</h2>
                <form class="create-form">
                
                    <div class="form-group">
                        <label for="ca">Peach Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>
                
                    <button type="submit">Add Peach</button>
                </form>
            </div>
        </div>
    </div>
</section>


